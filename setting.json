{
    "files.autoSave": "afterDelay",
    "files.autoSaveDelay": 1000, // 自动保存间隔，但是为ms，也就是1s保存一次
    "go.formatTool": "goformat",
    "vim.easymotion": true,
    "vim.useSystemClipboard": true,
    "vim.insertModeKeyBindingsNonRecursive": [
        {
            "before": [
                "f",
                "d"
            ],
            "after": [
                "<Esc>"
            ]
        },
        {
            "before": [
                "<C-g>"
            ],
            "after": [
                "<Esc>",
                "a"
            ]
        },
        {
            "before": [
                "<C-a>"
            ],
            "after": [
                "<Esc>",
                "I"
            ]
        },
        {
            "before": [
                "<C-e>"
            ],
            "after": [
                "<Esc>",
                "A"
            ]
        },
        {
            "before": [
                "<C-d>"
            ],
            "after": [
                "<del>"
            ]
        },
        {
            "before": [
                "<C-p>"
            ],
            "after": [
                "<up>"
            ]
        },
        {
            "before": [
                "<C-n>"
            ],
            "after": [
                "<down>"
            ]
        },
        {
            "before": [
                "<C-f>"
            ],
            "after": [
                "<right>"
            ]
        },
        {
            "before": [
                "<C-b>"
            ],
            "after": [
                "<left>"
            ]
        },
        {
            "before": [
                "<C-k>"
            ],
            "after": [
                "<Esc>",
                "C"
            ]
        }
    ],
    "vim.normalModeKeyBindingsNonRecursive": [
        {
            "before": [
                "<space>"
            ],
            "commands": [
                "vspacecode.space"
            ]
        },
        {
            "before": [
                ","
            ],
            "commands": [
                "vspacecode.space",
                {
                    "command": "whichkey.triggerKey",
                    "args": "m"
                }
            ]
        },
        {
            "before": [
                "<C-g>"
            ],
            "after": [
                "<Esc>"
            ]
        },
        {
            "before": [
                "z",
                "m"
            ],
            "commands": [
                "editor.foldAll"
            ]
        },
        {
            "before": [
                "z",
                "r"
            ],
            "commands": [
                "editor.unfoldAll"
            ]
        },
        {
            "before": [
                "z",
                "o"
            ],
            "commands": [
                "editor.unfoldRecursively"
            ]
        }
    ],
    "vim.visualModeKeyBindingsNonRecursive": [
        {
            "before": [
                "<space>"
            ],
            "commands": [
                "vspacecode.space"
            ]
        },
        {
            "before": [
                ","
            ],
            "commands": [
                "vspacecode.space",
                {
                    "command": "whichkey.triggerKey",
                    "args": "m"
                }
            ]
        },
        {
            "before": [
                "<C-g>"
            ],
            "after": [
                "<Esc>"
            ]
        }
    ],
    "cmake.configureOnOpen": true,
    "editor.tabSize": 4,
    "editor.insertSpaces": false,
    "editor.inlineSuggest.enabled": true,
    // "http.proxy": "http://127.0.0.1:4782",
    "terminal.integrated.enableMultiLinePasteWarning": false,
    "github.copilot.enable": {
        "*": true,
        "yaml": false,
        "plaintext": true,
        "markdown": false,
        "scminput": false
    },
    "[python]": {
        "editor.formatOnType": true
    }
}
